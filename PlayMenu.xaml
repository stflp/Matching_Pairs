<Window x:Class="TEMA_1_PAIRS.PlayMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TEMA_1_PAIRS"
        mc:Ignorable="d"
        Title="PlayMenu" Height="300" Width="800">
    <Grid>
        <Button Content="New Game" Height="70" Width="200" VerticalAlignment="Center" HorizontalAlignment="Center" Click="NewGame_Click"></Button>
        <Button Content="Statistics" Height="70" Width="200" Margin="60, 100" VerticalAlignment="Center" HorizontalAlignment="Left" Click="Statistics_Click"></Button>
        <Button Content="Exit" Height="70" Width="200" Margin="60, 100" VerticalAlignment="Center" HorizontalAlignment="Right" Click="Exit_Click"></Button>

    </Grid>
</Window>
